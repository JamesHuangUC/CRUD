<div class="container">
    {{#ifequal product.userId user.id}}
    <h1>Edit a Product</h1>
    {{#each product.errors}}
        <div class="alert alert-warning" role="alert">
            {{text}}
        </div>
    {{/each}}
    <form action="/products/{{product.id}}?_method=PUT" method="POST">
        <div class="form-group">
            <label for="productName">Product Name</label>
            <input name="product_name" type="text" class="form-control" id="productName" placeholder="Product Name" value={{product.product_name}}>
        </div>
        <div class="form-group">
            <label for="category">Category</label>
            <input name="category" type="text" class="form-control" id="category" placeholder="Category" value={{product.category}}>
        </div>
        <div class="form-group">
            <label for="price">Price (Leave blank for unknown)</label>
            <input name="price" type="number" class="form-control" id="price" placeholder="eg. 500, 5000, 10000" value={{product.price}}>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description" rows="3">{{product.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="emailAddress">Email Address</label>
            <input name="contact_email" type="email" class="form-control" id="emailAddress" placeholder="name@example.com" value={{product.contact_email}}>
        </div>
        <div class="form-group">
            <label for="cover">Image Cover</label>
            <input name="cover" type="text" class="form-control" id="cover" placeholder="Enter a link to an image" value={{product.cover}}>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
    <form action="/products/{{product.id}}?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-danger edit-remove-btn">Remove</button>
    </form>
    {{else}}
        <p>Not authoirzed.</p>
    {{/ifequal}}
</div>